generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  id           Int      @id @default(autoincrement())
  destination  String
  starts_at    DateTime
  ends_at      DateTime
  is_confirmed Boolean  @default(false)
  created_at   DateTime @default(now())

  participants Participant[]
  activities   Activity[]
  links        Link[]

  @@map("trips")
}

model Participant {
  id Int @id @default(autoincrement())

  name         String?
  email        String
  is_confirmed Boolean @default(false)
  is_owner     Boolean @default(false)

  trip_id Int
  trip    Trip @relation(fields: [trip_id], references: [id])

  @@map("participants")
}

model Activity {
  id        Int      @id @default(autoincrement())
  title     String
  occurs_at DateTime

  trip_id Int
  trip    Trip @relation(fields: [trip_id], references: [id])

  @@map("activities")
}

model Link {
  id    Int    @id @default(autoincrement())
  title String
  url   String

  trip_id Int
  trip    Trip @relation(fields: [trip_id], references: [id])

  @@map("links")
}
